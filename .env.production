# 环境
NODE_ENV=production

# 服务器配置
PORT=3001
HOST=0.0.0.0

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_production_password_here
DB_NAME=game
DB_POOL_LIMIT=20
DB_CONNECT_TIMEOUT=10000

# WebSocket 配置
WS_HEARTBEAT_INTERVAL=30000
WS_DISCONNECT_TIMEOUT=300000

# 游戏配置
DEFAULT_ANTE=10
DEFAULT_CHIPS=1000
MAX_PLAYERS=8
MIN_PLAYERS=2
AI_THINK_TIME_MIN=1000
AI_THINK_TIME_MAX=3000

# 安全配置
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# 文件上传配置
AVATAR_MAX_SIZE=2097152

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14
